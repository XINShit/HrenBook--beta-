<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <servlet-name>RegistrationAction</servlet-name>
        <servlet-class>servlet_classes.auth.registration</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistrationAction</servlet-name>
        <url-pattern>/reg</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ProfileAction</servlet-name>
        <servlet-class>servlet_classes.profile</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProfileAction</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LoginAction</servlet-name>
        <servlet-class>servlet_classes.auth.login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginAction</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutAction</servlet-name>
        <servlet-class>servlet_classes.auth.logout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutAction</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
</web-app>